<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_sub_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/sub_map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:mapType="hybrid"
        map:uiZoomControls="true"
        tools:context="io.typebrook.fiveminsmore.MapsActivity" />

    <Button
        android:id="@+id/btn_sync"
        style="@style/button_map"
        android:layout_marginRight="9.8dp"
        android:layout_marginTop="10.4dp"
        android:layout_alignParentRight="true"
        android:textColor="@drawable/btn_sync"
        android:text="同步"/>

</RelativeLayout>